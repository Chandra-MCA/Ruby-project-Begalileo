<h1>Listing ANIMALS</h1>
<%= link_to 'New article', new_animal_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Contact</th>
    <th>Gender</th>
    <th>Role</th>
  </tr>

  <% @animals.each do |animal| %>
    <tr>
      <td><%= animal.name %></td>
      <td><%= animal.email %></td>
      <td><%= animal.contact %></td>
      <td><%= animal.gender %></td>
      <td><%= animal.Role %></td>
      <td><%= link_to 'Show', animal_path(animal) %></td>
      <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
      <td><%= link_to 'Destroy', animal_path(animal),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
